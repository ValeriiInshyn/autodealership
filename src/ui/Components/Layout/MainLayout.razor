            <RadzenPanelMenuItem Text="Engines" Path="engines" />
            <RadzenPanelMenuItem Text="EngineTypes" Path="engine-types" />
            <RadzenPanelMenuItem Text="GearBoxTypes" Path="gear-box-types" />
            <RadzenPanelMenuItem Text="LeaseProposalConditions" Path="lease-proposal-conditions" />
