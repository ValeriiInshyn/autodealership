            <RadzenPanelMenuItem Text="ComfortOptions" Path="comfort-options" />
            <RadzenPanelMenuItem Text="Conditions" Path="conditions" />
            <RadzenPanelMenuItem Text="Countries" Path="countries" />
            <RadzenPanelMenuItem Text="Customers" Path="customers" />
            <RadzenPanelMenuItem Text="DealershipCars" Path="dealership-cars" />
