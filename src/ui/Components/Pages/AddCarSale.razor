@page "/add-car-sale"
@using CourseWork.Models.AutoDealership

<PageTitle>Add CarSale</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save CarSale</RadzenAlert>
        <RadzenTemplateForm TItem="CourseWork.Models.AutoDealership.CarSale" Data="@carSale" Visible="@(carSale != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Dealership Car" Component="DealershipCar" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenStack Orientation="Orientation.Horizontal">
                    <RadzenDropDownDataGrid Data="@dealershipCarsForDealershipCarId" TextProperty="Car.FullName" ValueProperty="Id" AllowClear=true
                                                Placeholder="Choose DealershipCar" style="display: block; width: 100%" @bind-Value="@carSale.DealershipCarId" Name="DealershipCarId"/>
                        <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddDealershipCarClick" Variant="Variant.Flat" />
                    </RadzenStack>
                    
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Customer" Component="Customer" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenStack Orientation="Orientation.Horizontal">
                        <RadzenDropDownDataGrid Data="@customersForCustomerId" TextProperty="FirstName" ValueProperty="Id" AllowClear=true
                                                Placeholder="Choose Customer" style="display: block; width: 100%" @bind-Value="@carSale.CustomerId" Name="CustomerId"/>
                        <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddCustomerClick" Variant="Variant.Flat" />
                    </RadzenStack>
                   
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Sale Status" Component="SaleStatus" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@saleStatusesForStatusId" TextProperty="Status" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose SaleStatus" style="display: block; width: 100%" @bind-Value="@carSale.StatusId" Name="StatusId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Expected Delivery Date" Component="ExpectedDeliveryDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy HH:mm:ss" style="display: block; width: 100%" @bind-Value="@carSale.ExpectedDeliveryDate" Name="ExpectedDeliveryDate" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Employee" Component="Employee" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenStack Orientation="Orientation.Horizontal">
                        <RadzenDropDownDataGrid Data="@employeesForEmployeeId" TextProperty="FirstName" ValueProperty="Id" AllowClear=true
                                            Placeholder="Choose Employee" style="display: block; width: 100%" @bind-Value="@carSale.EmployeeId" Name="EmployeeId"/>
                        <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddEmplyeeClick" Variant="Variant.Flat" />
                    </RadzenStack>
                    
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Payment Method" Component="PaymentMethod" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@paymentMethodsForPaymentMethodId" TextProperty="Name" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose PaymentMethod" style="display: block; width: 100%" @bind-Value="@carSale.PaymentMethodId" Name="PaymentMethodId"
                           />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>
