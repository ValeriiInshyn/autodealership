@page "/dealership-cars"

<PageTitle>DealershipCars</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="DealershipCars" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@dealershipCars" TItem="CourseWork.Models.AutoDealership.DealershipCar" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.DealershipCar" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.DealershipCar" Property="Car.Model" Title="Car">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.DealershipCar" Property="AutoDealership.Name" Title="Auto Dealership">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.DealershipCar" Property="CarsCount" Title="Cars Count">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.DealershipCar" Property="DealershipCarStatus.Name" Title="Dealership Car Status">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.DealershipCar" Property="CreateDate" Title="Create Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.DealershipCar" Property="UpdateDate" Title="Update Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.DealershipCar" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="dealershipCar">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, dealershipCar)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
