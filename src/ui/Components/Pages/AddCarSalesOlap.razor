@page "/add-car-sales-olap"

<PageTitle>Add CarSale</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save CarSale</RadzenAlert>
        <RadzenTemplateForm TItem="CourseWork.Models.AutoDealershipOLAP.CarSale" Data="@carSale" Visible="@(carSale != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Id" Component="Id" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@carSale.Id" Name="Id" />
                    <RadzenRequiredValidator Component="Id" Text="Id is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Auto Dealership" Component="AutoDealership" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@autoDealershipsForAutoDealershipId" TextProperty="Name" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose AutoDealership" style="display: block; width: 100%" @bind-Value="@carSale.AutoDealershipId" Name="AutoDealershipId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Brand Id" Component="BrandId" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@carSale.BrandId" Name="BrandId" />
                    <RadzenRequiredValidator Component="BrandId" Text="BrandId is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Total Income Last Month" Component="TotalIncomeLastMonth" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@carSale.TotalIncomeLastMonth" Name="TotalIncomeLastMonth" />
                    <RadzenRequiredValidator Component="TotalIncomeLastMonth" Text="TotalIncomeLastMonth is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Date1" Component="Date1" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@datesForStartDateId" TextProperty="" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose Date1" style="display: block; width: 100%" @bind-Value="@carSale.StartDateId" Name="StartDateId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Date" Component="Date" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@datesForEndDateId" TextProperty="" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose Date" style="display: block; width: 100%" @bind-Value="@carSale.EndDateId" Name="EndDateId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Total Income For Current Month" Component="TotalIncomeForCurrentMonth" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@carSale.TotalIncomeForCurrentMonth" Name="TotalIncomeForCurrentMonth" />
                    <RadzenRequiredValidator Component="TotalIncomeForCurrentMonth" Text="TotalIncomeForCurrentMonth is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Month Total Income Modify Percent" Component="MonthTotalIncomeModifyPercent" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@carSale.MonthTotalIncomeModifyPercent" Name="MonthTotalIncomeModifyPercent" />
                    <RadzenRequiredValidator Component="MonthTotalIncomeModifyPercent" Text="MonthTotalIncomeModifyPercent is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Sales Count For Last Month" Component="SalesCountForLastMonth" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@carSale.SalesCountForLastMonth" Name="SalesCountForLastMonth" />
                    <RadzenRequiredValidator Component="SalesCountForLastMonth" Text="SalesCountForLastMonth is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Sales Count For Current Month" Component="SalesCountForCurrentMonth" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@carSale.SalesCountForCurrentMonth" Name="SalesCountForCurrentMonth" />
                    <RadzenRequiredValidator Component="SalesCountForCurrentMonth" Text="SalesCountForCurrentMonth is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Sales Count Change For Month" Component="SalesCountChangeForMonth" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@carSale.SalesCountChangeForMonth" Name="SalesCountChangeForMonth" />
                    <RadzenRequiredValidator Component="SalesCountChangeForMonth" Text="SalesCountChangeForMonth is required" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

