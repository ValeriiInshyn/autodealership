@page "/leases-olap"

<PageTitle>Leases</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Leases" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Update Full Data" Click="@UpdateFullDataButtonClick" Variant="Variant.Flat" />
                <RadzenButton Icon="add_circle_outline" Text="Update Full Data" Click="@UpdateFullDataButtonClick" Variant="Variant.Flat" />

            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
        <RadzenColumn SizeMD=12>
            <RadzenDataGrid ColumnWidth="200px"PageSizeOptions=@(new int[]{5, 10, 20, 30})
                            Data="@leaseSum" TItem="CourseWork.Models.AutoDealershipOLAP.Lease">
                <Columns>
                    <RadzenDataGridColumn>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealershipOLAP.Lease" Property="Price" Title="Price">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealershipOLAP.Lease" Property="PreviousLeaseModifyPercent" Title="Previous Lease Modify Percent">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn >
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn >
                    </RadzenDataGridColumn>
                </Columns>

            </RadzenDataGrid>
            <RadzenDataGrid @ref="grid0" ColumnWidth="200px" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[] { 5, 10, 20, 30 })
                            Data="@leases" TItem="CourseWork.Models.AutoDealershipOLAP.Lease">
                <Columns>
                    <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealershipOLAP.Lease" Property="Car.FullName" Title="Car">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealershipOLAP.Lease" Property="Price" Title="Price">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealershipOLAP.Lease" Property="PreviousLeaseModifyPercent" Title="Previous Lease Modify Percent">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealershipOLAP.Lease" Property="Date1.FullDate" Title="Date1">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealershipOLAP.Lease" Property="Date2.FullDate" Title="Date2">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealershipOLAP.Lease" Property="Date.FullDate" Title="Date">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealershipOLAP.Lease" Property="LastLeaseId" Title="Last Lease Id">
                    </RadzenDataGridColumn>
                </Columns>

            </RadzenDataGrid>

        </RadzenColumn>
  </RadzenRow>
</RadzenStack>
