@page "/add-leases-olap"

<PageTitle>Add Lease</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Lease</RadzenAlert>
        <RadzenTemplateForm TItem="CourseWork.Models.AutoDealershipOLAP.Lease" Data="@lease" Visible="@(lease != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Car" Component="Car" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@carsForCarId" TextProperty="Model" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose Car" style="display: block; width: 100%" @bind-Value="@lease.CarId" Name="CarId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Price" Component="Price" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@lease.Price" Name="Price" />
                    <RadzenRequiredValidator Component="Price" Text="Price is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Previous Lease Modify Percent" Component="PreviousLeaseModifyPercent" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@lease.PreviousLeaseModifyPercent" Name="PreviousLeaseModifyPercent" />
                    <RadzenRequiredValidator Component="PreviousLeaseModifyPercent" Text="PreviousLeaseModifyPercent is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Date1" Component="Date1" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@datesForLeaseSignDateId" TextProperty="" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose Date1" style="display: block; width: 100%" @bind-Value="@lease.LeaseSignDateId" Name="LeaseSignDateId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Date2" Component="Date2" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@datesForLeaseStartDateId" TextProperty="" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose Date2" style="display: block; width: 100%" @bind-Value="@lease.LeaseStartDateId" Name="LeaseStartDateId"
                           />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

