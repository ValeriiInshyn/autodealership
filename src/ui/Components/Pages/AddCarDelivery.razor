@page "/add-car-delivery"

<PageTitle>Add CarDelivery</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save CarDelivery</RadzenAlert>
        <RadzenTemplateForm TItem="CourseWork.Models.AutoDealership.CarDelivery" Data="@carDelivery" Visible="@(carDelivery != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Car Sale" Component="CarSale" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@carSalesForSaleId" TextProperty="" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose CarSale" style="display: block; width: 100%" @bind-Value="@carDelivery.SaleId" Name="SaleId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Distributor" Component="Distributor" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@distributorsForDistributorId" TextProperty="DistributorName" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose Distributor" style="display: block; width: 100%" @bind-Value="@carDelivery.DistributorId" Name="DistributorId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Delivery Date" Component="DeliveryDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy HH:mm:ss" style="display: block; width: 100%" @bind-Value="@carDelivery.DeliveryDate" Name="DeliveryDate" />
                    <RadzenRequiredValidator Component="DeliveryDate" Text="DeliveryDate is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Delivery Cost" Component="DeliveryCost" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@carDelivery.DeliveryCost" Name="DeliveryCost" />
                    <RadzenRequiredValidator Component="DeliveryCost" Text="DeliveryCost is required" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

