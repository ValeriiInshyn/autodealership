@page "/add-lease-proposal-condition"

<PageTitle>Add LeaseProposalCondition</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save LeaseProposalCondition</RadzenAlert>
        <RadzenTemplateForm TItem="CourseWork.Models.AutoDealership.LeaseProposalCondition" Data="@leaseProposalCondition" Visible="@(leaseProposalCondition != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Lease Proposal" Component="LeaseProposal" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@leaseProposalsForLeaseProposalId" TextProperty="Description" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose LeaseProposal" style="display: block; width: 100%" @bind-Value="@leaseProposalCondition.LeaseProposalId" Name="LeaseProposalId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Condition" Component="Condition" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@conditionsForConditionId" TextProperty="Name" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose Condition" style="display: block; width: 100%" @bind-Value="@leaseProposalCondition.ConditionId" Name="ConditionId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Value" Component="Value" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@leaseProposalCondition.Value" Name="Value" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

