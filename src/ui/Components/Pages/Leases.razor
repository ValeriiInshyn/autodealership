@page "/leases"

<PageTitle>Leases</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Leases" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@leases" TItem="CourseWork.Models.AutoDealership.Lease" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.Lease" Property="Employee.FirstName" Title="Employee">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.Lease" Property="LeaseProposal.Description" Title="Lease Proposal">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.Lease" Property="Customer.FirstName" Title="Customer">
                </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.Lease" Property="DealershipCar.Car.FullName" Title="Dealership Car">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.Lease" Property="LeaseSignDate" Title="Lease Sign Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.Lease" Property="LeaseStartDate" Title="Lease Start Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.Lease" Property="LeaseEndDate" Title="Lease End Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.Lease" Property="LeaseUniqueNumber" Title="Lease Unique Number">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.Lease" Property="TotalPrice" Title="Total Price">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.Lease" Property="Description" Title="Description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.Lease" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="lease">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, lease)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
