@page "/car-sales"

<PageTitle>CarSales</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="CarSales" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@carSales" TItem="CourseWork.Models.AutoDealership.CarSale" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.CarSale" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.CarSale" Property="DealershipCar" Title="Dealership Car">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.CarSale" Property="Customer.FirstName" Title="Customer">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.CarSale" Property="SaleDate" Title="Sale Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.CarSale" Property="SaleStatus.Status" Title="Sale Status">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.CarSale" Property="ExpectedDeliveryDate" Title="Expected Delivery Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.CarSale" Property="Employee.FirstName" Title="Employee">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.CarSale" Property="PaymentMethod.Name" Title="Payment Method">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.CarSale" Property="CreateDate" Title="Create Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.CarSale" Property="UpdateDate" Title="Update Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CourseWork.Models.AutoDealership.CarSale" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="carSale">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, carSale)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
