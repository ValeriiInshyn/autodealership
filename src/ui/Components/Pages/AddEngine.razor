@page "/add-engine"

<PageTitle>Add Engine</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Engine</RadzenAlert>
        <RadzenTemplateForm TItem="CourseWork.Models.AutoDealership.Engine" Data="@engine" Visible="@(engine != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Brand" Component="Brand" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@brandsForBrandId" TextProperty="Name" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose Brand" style="display: block; width: 100%" @bind-Value="@engine.BrandId" Name="BrandId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Engine Type" Component="EngineType" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@engineTypesForEngineTypeId" TextProperty="Name" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose EngineType" style="display: block; width: 100%" @bind-Value="@engine.EngineTypeId" Name="EngineTypeId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Engine Volume" Component="EngineVolume" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@engine.EngineVolume" Name="EngineVolume" />
                    <RadzenRequiredValidator Component="EngineVolume" Text="EngineVolume is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Engine Power" Component="EnginePower" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@engine.EnginePower" Name="EnginePower" />
                    <RadzenRequiredValidator Component="EnginePower" Text="EnginePower is required" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

